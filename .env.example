# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_BATCH_SIZE=100

# Slack Configuration (Required for Slack bot)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_SIGNING_SECRET=your_signing_secret

# Confluence Configuration (Optional)
CONFLUENCE_URL=https://your-company.atlassian.net
CONFLUENCE_EMAIL=your-email@company.com
CONFLUENCE_API_TOKEN=your_confluence_api_token
CONFLUENCE_SPACE_KEY=DOCS
CONFLUENCE_PAGE_LIMIT=50

# PostgreSQL Database Configuration (Supabase recommended for free tier)
# Option 1: Use DATABASE_URL (recommended for Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# Option 2: Use individual connection params (for custom PostgreSQL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=duvidaki_db
# DB_USER=postgres
# DB_PASSWORD=your_password_here
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10

# Application Configuration
LOG_LEVEL=INFO
MAX_RESULTS=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Performance Configuration (Optional)
ENABLE_CACHE=false
CACHE_TTL=3600
